<%= render 'shared/errors', object:movie %>
<%= form_with(model: movie, local: true) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :rating %>
  <%= f.select :rating, Movie::RATINGS, prompt: "Pick one" %>

  <%= f.label :total_gross %>
  <%= f.text_field :total_gross %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 5 %>

  <%= f.label :released_on %>
  <%= f.datetime_select :released_on %>

  <%= f.label :director %>
  <%= f.text_field :director %>

  <%= f.label :duration %>
  <%= f.text_field :duration %>

  <%= f.label :image_file_name %>
  <%= f.text_field :image_file_name %>

  <%= f.submit %>
<% end %>